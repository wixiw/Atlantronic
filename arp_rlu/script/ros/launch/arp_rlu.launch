<!-- ARD arp_rlu main launch file -->
<launch>
	<include file="$(find arp_core)/script/ros/launch/machines.launch"/>
	<node name="Localizator"  pkg="arp_rlu"  type="LocalizatorNode"  args="" output="screen"/>
 	<node name="ObstacleDetector"  pkg="arp_rlu"  type="ObstacleDetectorNode"  args="" output="screen">
 		<!--  L'obstacle n'est détecté que s'il est à moins de FRONT_DETECTION_THRESHOLD m vers l'avant (depuis l'essieu, PAS de symétrie vers l'arrière) -->
 		<param name="FRONT_DETECTION_THRESHOLD" type="double" value="0.500"/> 
 		<!--  L'obstacle n'est détecté que s'il est à moins de LATERAL_DETECTION_THRESHOLD sur un côté (depuis le centre du robot, symétrique) -->
 		<param name="LATERAL_DETECTION_THRESHOLD" type="double" value="0.250"/> 
 		<!--  zone morte devant, pour ne pas détecter ce qui est dans le robot(depuis l'essieu, PAS de symétrie vers l'arrière) -->
 		<param name="FRONT_BLIND_ZONE" type="double" value="0.200"/>
 		<!--  zone morte sur le côté, pour ne pas détecter ce qui est dans le robot (depuis le centre du robot, symétrique) -->
 		<param name="LATERAL_BLIND_ZONE" type="double" value="0.130"/>
 		<param name="base_frame" type="string" value="base_link"/> 
 		<param name="rear_ir_switch_frame" type="string" value="rear_ir_switch"/> 
 		<param name="front_laser_frame" type="string" value="top_laser"/> 
 	</node>
 	<node name="CornerDetector"  pkg="arp_rlu"  type="CornerDetectorNode"  args="" output="screen" >
  		<param name="front_scan_topic_name" type="string" value="/front_scan"/>
  		<param name="reverse_scan" type="bool" value="true"/> 
 	</node> 
 	<node name="ReLocalizator"  pkg="arp_rlu"  type="ReLocalizatorNode"  args="" output="screen">
  		<param name="base_frame" type="string" value="base_link"/>
  		<param name="front_laser_frame" type="string" value="top_laser"/> 
 	</node> 
 	
 	<!--
 	<node name="Laserator" pkg="canonical_scan_matcher" type="csm_node" output="log">
  		<param name="world_frame" type="string" value="world"/>
  		<param name="base_frame" type="string" value="base_link"/>
  		<param name="scan_frame" type="string" value="scan"/>
  		<param name="publish_tf" type="bool" value="false"/>
  		<param name="odometry_type" type="string" value="tf"/>
 	</node> 
	-->
</launch>
